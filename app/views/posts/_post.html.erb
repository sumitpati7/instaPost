<%= turbo_frame_tag "post_#{post.id}" do %>
  <div class="mx-auto shadow-md my-4">
    <div class="bg-white min-w-[900px] max-w-full border border-gray-300 rounded-lg shadow-sm">
      <div class="flex items-center px-4 py-3">
        <div class="h-10 w-10 flex justify-center items-center rounded-full bg-green-200"><%= post.user.email[0].capitalize%></div>
        <div class="ml-4">
          <h2 class="font-semibold text-gray-800"><%= post.user.email%></h2>
          <span class="text-sm text-gray-500">2 hours ago</span>
        </div>
      </div>
      
      <!-- Post Image -->
      <div class="flex justify-center items-center border-b border-gray-300 pb-4"><%= image_tag post.photo %></div>
      
      <!-- Post Interaction Buttons -->
      <div class="px-4 py-3">
        <div><%= render 'shared/likes', post:post %></div>
        <p class="mt-2 text-sm text-gray-600"><span class="font-semibold"><%= post.user.email%></span>  <%= post.caption %></p>
        <%= link_to "View all comments", post_path(post),data: { turbo_frame: "_top" }, class: "mt-1 text-sm text-gray-400 cursor-pointer"%>
      </div>  
    <!-- Additional posts can be added the same way -->
    </div>
  </div>
<% end %>