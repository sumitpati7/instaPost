<div class="max-w-2xl mx-auto">
  <div class="bg-white min-w-[500px] max-w-full border border-gray-300 rounded-lg shadow-sm">
    <div class="flex items-center px-4 py-3">
      <div class="h-10 w-10 flex justify-center items-center rounded-full bg-green-200"><%= post.user.email[0].capitalize%></div>
      <div class="ml-4">
        <h2 class="font-semibold text-gray-800"><%= post.user.email%></h2>
        <span class="text-sm text-gray-500">2 hours ago</span>
      </div>
    </div>
    
    <!-- Post Image -->
    <div class="flex justify-center items-center border-b border-gray-300 pb-4"><%= image_tag post.photo %></div>
    
    <!-- Post Interaction Buttons -->
    <div class="px-4 py-3">
      <div class="flex items-center space-x-4">
        <button class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-700 hover:text-red-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 6.5 3.5 5 5.5 5c1.54 0 3.04 0.99 3.57 2.36h1.87C12.46 5.99 13.96 5 15.5 5 17.5 5 19 6.5 19 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
          </svg>
        </button>
        <button class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-700 hover:text-blue-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M21 10.75L12 2 3 10.75V21h6v-6h6v6h6z"/>
          </svg>
        </button>
        <button class="focus:outline-none">
          <svg class="w-6 h-6 text-gray-700 hover:text-green-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M21 6H3v14h18V6zm-2 12H5V8h14v10z"/>
          </svg>
        </button>
      </div>
      <p class="mt-2 text-sm text-gray-600"><span class="font-semibold"><%= post.user.email%></span>  <%= post.caption %></p>
      <%= link_to "View all comments", post_path(post), class: "mt-1 text-sm text-gray-400 cursor-pointer"%>
    </div>  
  <!-- Additional posts can be added the same way -->
</div>
</div>